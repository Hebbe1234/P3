<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NorthernWinterBeat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>



<body>
    <nav class="navbar fixed-bottom navbar-expand bg-light justify-content-center" style="text-align:center;">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/ParticipantRazor/ParticipantConcertOverview">
                        <img src="~/Graphics/Icons/calendar.svg" style="width: 25%; height: 25%" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/ParticipantRazor/ParticipantBookings">
                        <img src="~/Graphics/Icons/bookmark.svg" style="width: 25%; height: 25%" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/ParticipantRazor/ParticipantFAQ">
                        <img src="~/Graphics/Icons/faq.svg" style="width: 25%; height: 25%" />
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <header style="        text-align: center;
        background-color: #f8f9fa
">
        <img src="~/Graphics/Pictures/NWB2021_LOGO_BlackTransparent.png"  
             style="
                    position:relative;
                    max-height:5em; max-width:100%"
             />
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)




</body>
</html>
