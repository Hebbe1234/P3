@page
@model NorthernWinterBeat.Pages.Admin.ParticipantAdmin.EditParticipantModel
@{
}

<div class="text-lg-center">
    <h1 class="display-3"> Edit User </h1>
</div>

<form method="post" asp-page-handler="EditParticipant">

    @Html.Hidden("id", Model.Participant.ID)
    <h3>Email</h3>
    <input name="EmailEntered" type="text" placeholder="@Model.Participant.Username" required value="@Model.Participant.Username" />
    <br>
    <h3>Ticket Nr</h3>
    <input name="TicketNr" type="text" placeholder="@Model.Participant.Ticket.TicketNumber" value="@Model.Participant.Ticket.TicketNumber" />
    <br>
    <h3>Address</h3>
    <input name="Name" type="text" placeholder="@Model.Participant.Name" value="@Model.Participant.Name" />

    <br>

    <input type="submit" value="Confirm">

    <input type="button" value="Cancel" data-toggle="modal" data-target="#Cancel">
</form>

<div class="modal fade" id="Cancel" tabindex="-1" role="dialog" aria-labelledby="CancelLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Cancel"> Finish editing Participant? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to finish editing this Participant?
            </div>
            <div class="modal-footer">

                <input type="button" class="btn btn-secondary" data-dismiss="modal" value="No" />
                <form method="post" asp-page-handler="Cancel">
                    @Html.Hidden("id", Model.Participant.ID)
                    <input type="submit" class="btn btn-primary" value="Yes" />
                </form>
            </div>
        </div>
    </div>
</div>

