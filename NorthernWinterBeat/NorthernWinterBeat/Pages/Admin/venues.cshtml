@page
@model NorthernWinterBeat.Pages.Admin.VenuesModel

@{
    ViewData["Title"] = "Venues";
}


<div class="card">
    <div class="container">
        <h3><a>Venue</a></h3>
        <p>
            Here you can see all of the information about the created venues: <br />
            The name of the venue, the capacity, and the number of concerts at the venue.
            <br /><br />
            Click the button "Add Venue" to create a new venue. <br />
            To edit an existing venue, click the specific venue, and then edit.
        </p>

        <button class="btn btn-secondary float-right" style="margin: 20px" data-toggle="modal" data-target="#newVenue">
            Add venue
            <i class="fas fa-plus-circle"></i>
        </button>


    </div>
</div>


<div class="modal fade" id="newVenue" tabindex="-1" role="dialog" aria-labelledby="newVenueLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newVenue"> add new venue ? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to add a new venue?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> No </button>
                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/AddVenue">
                    <input type="button" class="btn btn-primary" value="Yes" />
                </a>
            </div>
        </div>
    </div>
</div>




<table class="table table-hover" table-bordered>
    <thead>
        <tr>
            <th>
                <form asp-page-handler="SortByVenue" method="post">
                    <button class="btn btn-default">Venue</button>
                </form>

            </th>
            <th>
                <form asp-page-handler="SortByCapacity" method="post">
                    <button class="btn btn-default">Capacity</button>
                </form>
            </th>
            <th>
                <form asp-page-handler="SortByAddress" method="post">
                    <button class="btn btn-default">Address</button>
                </form>

            </th>
        </tr>
    </thead>
    <tbody>

        @{
            List<NorthernWinterBeat.Models.Venue> venues = new List<Models.Venue>(Model.venues);

            venues = Model.SortVenues(venues);


            int i = 0;
            foreach (var item in venues)
            {
                <tr onclick="location.href = '@(Url.Page("VenuePage", new { id = item.ID }))'">
                    <td>
                        @item.Name
                    </td>


                    <td>
                        @*@item.Bookings.Length*@/@item.Capacity
                    </td> @*MANGLER: Mulighed for at se current capacity. Det kræver ændring i Concert klassen, som jeg ikke vil lave her*@

                    <td>
                        @item.Address
                    </td>

                </tr>
                i++;
            }
        }


    </tbody>
</table>