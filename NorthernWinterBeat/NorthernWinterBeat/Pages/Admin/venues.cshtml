@page
@model Index1Model
@{
    ViewData["Title"] = "Venues";
}


<button class="btn btn-secondary float-right" style="margin: 20px" data-toggle="modal" data-target="#newVenue">
    Tilføj venue
    <i class="fas fa-plus-circle"></i>
</button>

<div class="modal fade" id="newVenue" tabindex="-1" role="dialog" aria-labelledby="newVenueLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newVenue"> add new venue ? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Vil du tilføje en ny venue?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Nej </button>
                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/AddVenue">
                    <input type="button" class="btn btn-primary" value="Ja" />
                </a>
            </div>
        </div>
    </div>
</div>


<table class="table" style="width: 100%">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Venue</th>
            <th scope="col">Kapacitet</th>
            <th scope="col">Koncert #</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td><a class="btn-link text-dark" asp-area="" asp-page="/Admin/Venue"> Jakobs hus </a></td>
            <td>5</td>
            <td>4</td>
        </tr>
        <tr>
            <td><a class="btn-link text-dark" asp-area="" asp-page="/Admin/Venue"> Joachims hus </a></td>
            <td>7</td>
            <td>3</td>
        </tr>
        <tr>
            <td><a class="btn-link text-dark" asp-area="" asp-page="/Admin/Venue"> Stines hus </a></td>
            <td>7</td>
            <td>9</td>
        </tr>
    </tbody>
</table>
