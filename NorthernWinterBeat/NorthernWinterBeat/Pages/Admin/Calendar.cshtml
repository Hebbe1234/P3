@page
@model NorthernWinterBeat.Pages.Admin.CalendarModel
@{
    ViewData["Title"] = "Calendar";
}

<button class="btn btn-secondary float-right" style="margin: 20px" data-toggle="modal" data-target="#newConcert"> Add concert 
    <i class="fas fa-plus-circle"></i> </button>

<div class="modal fade" id="newConcert" tabindex="-1" role="dialog" aria-labelledby="newConcertLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newConcert"> Add new concert? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to add a new concert to the calendar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> No </button>
                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Concert">
                    <input type="button" class="btn btn-primary" value="Yes" />
                </a>
            </div>
        </div>
    </div>
</div>

