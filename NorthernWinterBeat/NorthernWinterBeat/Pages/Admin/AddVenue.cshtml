@page
@model NorthernWinterBeat.Pages.Admin.AddVenueModel
@{
}

<div class="text-lg-center">
    <h1 class="display-3"> Add venue information </h1>
</div>

<form method="post" asp-page-handler="CreateVenue" id="inForm1">
    <h3>Venue</h3>
    <input name="VenueEntered" type="text" placeholder="Enter name of venue" minlength="1" required />
    <br>
    <h3>Capacity</h3>
    <input name="CapacityEntered" type="number" placeholder="Enter venue capacity" minlength="1" />
    <br>
    <h3>Address</h3>
    <input name="AddressEntered" type="text" placeholder="Enter venue address" minlength="1" />
    <br>
    <br>
    <input type="submit" id="btnSubmit1" value="Confirm">
    <input type="button" value="Cancel" data-toggle="modal" data-target="#Cancel">
</form>



<div class="modal fade" id="Cancel" tabindex="-1" role="dialog" aria-labelledby="CancelLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Cancel"> End venue adding ? </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to end adding to this venue?
            </div>
            <div class="modal-footer">


                <input type="button" class="btn btn-secondary" data-dismiss="modal" value="No" />
                <form method="post" asp-page-handler="Cancel">
                    <input type="submit" class="btn btn-primary" value="Yes" />
                </form>

            </div>
        </div>
    </div>
</div>
