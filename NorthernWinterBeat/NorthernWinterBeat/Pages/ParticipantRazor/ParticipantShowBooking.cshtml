@page
@model NorthernWinterBeat.Pages.ParticipantRazor.ParticipantShowBookingModel
@{
}

<div class="text-center">
    <h1>Your booking</h1>
    <div>
        <h2>Ticket number: </h2>
        <p>@Model.Participant.Ticket.TicketNumber</p>
        <h2>Name</h2>
        <h1>@Model.Participant.Name</h1>
        <h2>Email</h2>
        <h1>@Model.Participant.Email</h1>
        <br>
        <h2>Concert</h2>
        <h1>@Model.Concert.Artist</h1>
        <h2>Venue</h2>
        <h1>@Model.Concert.Venue.Name</h1>
        <h2>Start time</h2>
        <h1>
            @Model.Concert.Start
            @*@Model.Concert.Start.Date.ToString("dd-MM-yyyy") @Model.Concert.Start.Date.ToString("HH:mm")*@
        </h1>
    </div>
    <div class="text-center">
        <button type="button" class="btn btn-primary text-center" data-toggle="modal" data-target="#goBackBooking">
            Return to bookings
        </button>
    </div>
</div>






<!-- Show booking modal -->
<div class="modal fade " id="goBackBooking" tabindex="-1" role="dialog" aria-labelledby="goBackBookingLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="goBackBookingLabel">Go back</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Going back will make this booking invalid. 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <a class="nav-link text-dark" asp-area="" asp-page="/Participant/ParticipantBookings">
                    <input type="button" class="btn btn-primary" value="Yes" />
                </a>
            </div>
        </div>
    </div>
</div>