@page
@model NorthernWinterBeat.Pages.VenueRazor.IndexModel
@{
}
Venue

<table class="table table-hover" table-bordered>
    <thead>
        <tr>
            <th>
                <form asp-page-handler="SortByArtist" method="post" ><button  class="btn btn-default">Artist</button> </form>
                

            </th>
            <th>
                <form asp-page-handler="SortByTime" method="post"><button  class="btn btn-default">Time</button> </form>

                
            </th>
            <th>
                <form asp-page-handler="SortByCapacity" method="post"><button  class="btn btn-default">Capacity</button> </form>
                
            </th>

        </tr>
    </thead>
    <tbody>

        @{
            List<Concert> SortConcert = new List<Concert>(Model.Concerts);

            SortConcert = Model.SortConcertBy(SortConcert);

            string zero = "00";

            foreach (var item in SortConcert)
            {
                <tr>
                    <td>@item.Artist</td>
                    <td>
                        @item.Start.Hour:@if (item.Start.Minute == 0)
                        {@zero;
                    }
                    else
                    {@item.Start.Minute}
                    </td>
                    <td>@*@item.Bookings.Length*@0/@item.Venue.Capacity</td>       @*MANGLER: Mulighed for at se current capacity. Det kræver ændring i Concert klassen, som jeg ikke vil lave her*@
                </tr>
            }
        }


    </tbody>
</table>


